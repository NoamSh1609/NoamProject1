<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".screens.MainActivity">

    <!-- Title TextView with smooth and clean design -->

    <!-- Registration Button with subtle shadow -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="224dp"
        app:srcCompat="@drawable/logo" />

    <!-- Login Button with a more modern look -->

    <!-- Website Review Button with eye-catching color -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#8B5A2B"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="הרשם"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLoginMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFC107"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="התחבר"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnWebsiteReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#FF7043"
                android:gravity="center"
                android:shadowColor="#FF7043"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="ביקרות"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAttractionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#D560D8"
                android:gravity="center"
                android:shadowColor="#4CAF50"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="יעדים"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAddAttraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#54D38D"
                android:gravity="center"
                android:shadowColor="#4CAF50"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="הוספת יעד"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMangerLoginPage"
                android:layout_width="379dp"
                android:layout_height="54dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#D32547"
                android:gravity="center"
                android:shadowColor="#D82735"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="מחיקת משתמש"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnShowUser"
                android:layout_width="379dp"
                android:layout_height="54dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#D32547"
                android:gravity="center"
                android:shadowColor="#D82735"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text=" משתמשים"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>