<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".screens.wondermate">

    <!-- כותרת ראשית -->
    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ברוכים הבאים ל-WonderMate!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- תיאור כללי -->
    <TextView
        android:id="@+id/aboutDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WonderMate היא אפליקציה שיתופית למטיילים, בה כל אחד יכול לשתף טיולים, לגלות מקומות חדשים וליהנות מחוויות של אחרים – במקום אחד נוח, חכם ומעורר השראה."
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/aboutTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- כותרת איך זה עובד -->
    <TextView
        android:id="@+id/howItWorksTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📍 איך זה עובד?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        app:layout_constraintTop_toBottomOf="@id/aboutDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <!-- תוכן איך זה עובד -->
    <TextView
        android:id="@+id/howItWorksDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🌍 גלה טיולים שהעלו משתמשים אחרים לפי אזור, סוג מסלול ורמת קושי.\n☁️ קבל תחזית מזג אוויר עדכנית לפי מיקום היעד, בזמן אמת.\n⭐ דרג טיולים שהתנסית בהם וראה דירוגים אמיתיים של מטיילים אחרים.\n💬 שלח תגובות, שאלות וחוות דעת למשתמשים בקהילה.\n🔖 הוסף טיולים לרשימת המועדפים האישית שלך – כדי לחזור אליהם בקלות בכל רגע."
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/howItWorksTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- כותרת - מה תוכל לעשות -->
    <TextView
        android:id="@+id/travelDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🚀 מה תוכל לעשות עם WonderMate?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3AA53F"
        app:layout_constraintTop_toBottomOf="@id/howItWorksDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp" />

    <!-- תוכן - תכונות האפליקציה -->
    <TextView
        android:id="@+id/travelDetailsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="📸 שתף את המסלול שלך עם תמונות, תיאור אישי וטיפים חשובים.\n🗺️ קבל מידע על אורך המסלול, דרכי גישה ומפה אינטראקטיבית.\n🔁 קבל השראה מהטיולים של אחרים והתחבר לחוויות שלהם.\n💡 נצל כלים חכמים שיעזרו לך לבחור את הטיול שמתאים בדיוק לך.\n❤️ שמור טיולים שאהבת ברשימת המועדפים האישית שלך."
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/travelDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- כפתור חזרה -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🔙 חזור"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#010202"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/travelDetailsDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
