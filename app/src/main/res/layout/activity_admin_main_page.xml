<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manager_background"
    tools:context=".screens.AdminMainPage">

    <!-- כותרת ראשית -->
    <TextView
        android:id="@+id/txtGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="76dp"
        android:text="שלום המנהל נועם"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- קו מפריד עדין -->
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#B0B0B0"
        app:layout_constraintTop_toBottomOf="@id/txtGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- כפתור להצגת משתמשים -->
    <Button
        android:id="@+id/btnShowUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="הצג משתמשים"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#3E5C6D"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/txtGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- כפתור להצגת אטרקציות -->
    <Button
        android:id="@+id/btnShowAdmin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="הצג אטרקציות"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#2C3E50"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnShowUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- כפתור התנתקות -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="312dp"
        android:layout_height="86dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#D32F2F"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="התנתקות"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnShowAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>
