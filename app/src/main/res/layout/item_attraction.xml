<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvAttractionName"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="אטרקציה:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAttractionCity"
        android:layout_width="64dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="עיר:"
        app:layout_constraintEnd_toEndOf="@+id/tvAttractionName"
        app:layout_constraintTop_toBottomOf="@+id/tvAttractionName" />

    <Button
        android:id="@+id/btnAttraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="קרא עוד...."
        app:layout_constraintEnd_toEndOf="@+id/tvAttractionCity"
        app:layout_constraintTop_toBottomOf="@+id/tvAttractionCity" />

    <TextView
        android:id="@+id/tvAttractionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="פרטים"

        app:layout_constraintEnd_toEndOf="@+id/tvAttractionCity"
        app:layout_constraintTop_toBottomOf="@+id/tvAttractionCity" />

</androidx.constraintlayout.widget.ConstraintLayout>